<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/ItemCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/busCardMargin"
        android:layout_marginBottom="@dimen/busCardMargin"
        app:cardCornerRadius="@dimen/busCardCornerRadius">

        <TextView
            android:id="@+id/bus_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/bus_horizontal_dimen"
            android:paddingTop="@dimen/bus_vertical_dimen"
            android:paddingEnd="@dimen/bus_horizontal_dimen"
            android:paddingBottom="@dimen/bus_vertical_dimen" />
    </android.support.v7.widget.CardView>

</LinearLayout>